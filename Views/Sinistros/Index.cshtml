@model IEnumerable<netchallenge.Domain.Entities.Sinistro>

<h2>Lista de Sinistros</h2>

<table class="table">
    <thead>
        <tr>
            <th>Paciente</th>
            <th>Tratamento</th>
            <th>Data de Ocorrência</th>
            <th>Valor Reembolsado</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)

        {
            <tr>
                <td>@item.Paciente.Nome</td>
                <td>@item.Tratamento.Descricao</td>
                <td>@item.DataOcorrencia.ToString("dd/MM/yyyy")</td>
                <td>@item.ValorReembolsado</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Adicionar Novo Sinistro</a>