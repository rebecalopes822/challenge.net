@model netchallenge.Domain.Entities.Recomendacao

@{
    ViewData["Title"] = "Editar Recomendação";
}

<h2>Editar Recomendação</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="PacienteId" class="control-label">Paciente</label>
        <input asp-for="PacienteId" class="form-control" />
        <span asp-validation-for="PacienteId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TratamentoId" class="control-label">Tratamento</label>
        <input asp-for="TratamentoId" class="form-control" />
        <span asp-validation-for="TratamentoId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataRecomendacao" class="control-label">Data da Recomendação</label>
        <input asp-for="DataRecomendacao" class="form-control" type="date" />
        <span asp-validation-for="DataRecomendacao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Motivo" class="control-label">Motivo</label>
        <textarea asp-for="Motivo" class="form-control"></textarea>
        <span asp-validation-for="Motivo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</form>