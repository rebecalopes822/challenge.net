@model netchallenge.Domain.Entities.Recomendacao

@{
    ViewData["Title"] = "Excluir Recomendação";
}

<h2>Excluir Recomendação</h2>

<h3>Tem certeza que deseja excluir esta recomendação?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Paciente</dt>
        <dd class="col-sm-10">@Model.Paciente.Nome</dd> 
        <dt class="col-sm-2">Tratamento</dt>
        <dd class="col-sm-10">@Model.Tratamento.Descricao</dd> 
        <dt class="col-sm-2">Data da Recomendação</dt>
        <dd class="col-sm-10">@Model.DataRecomendacao.ToString("dd/MM/yyyy")</dd>
        <dt class="col-sm-2">Motivo</dt>
        <dd class="col-sm-10">@Model.Motivo</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Excluir" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>