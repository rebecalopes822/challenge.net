@model netchallenge.Domain.Entities.Tratamento

<h2>Criar Tratamento</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Tipo"></label>
        <input asp-for="Tipo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Custo"></label>
        <input asp-for="Custo" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
</form>