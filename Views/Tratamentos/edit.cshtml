@model netchallenge.Domain.Entities.Tratamento

<h2>Editar Tratamento</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Tipo"></label>
        <input asp-for="Tipo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Custo"></label>
        <input asp-for="Custo" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
</form>